@model WarehouseManagementSystem.Models.Customer

@{
    ViewBag.Title = "刪除客戶";
}

<h2>刪除客戶</h2>

<h3>你確定要刪除這個客戶嗎？</h3>

<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>客戶代號</dt>
        <dd>@Model.CustomerCode</dd>

        <dt>名稱</dt>
        <dd>@Model.Name</dd>

        <dt>聯絡人</dt>
        <dd>@Model.ContactPerson</dd>

        <dt>電話</dt>
        <dd>@Model.Phone</dd>

        <dt>地址</dt>
        <dd>@Model.Address</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Customers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p>
        <input type="submit" value="確定刪除" class="btn btn-danger" />
        @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
    </p>
}

