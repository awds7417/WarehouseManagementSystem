@{
    ViewBag.Title = "新增使用者";
}

<h2>新增使用者</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("帳號", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="userName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("密碼", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="password" name="password" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("顯示名稱", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="displayName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("是否為管理者", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="checkbox" name="isAdmin" value="true" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="建立帳號" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

