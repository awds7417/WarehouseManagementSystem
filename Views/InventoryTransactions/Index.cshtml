@model WarehouseManagementSystem.Models.InventoryTransactionListViewModel

@{
    ViewBag.Title = "進出貨紀錄";
}

<h2>進出貨紀錄</h2>

<p>
    @Html.ActionLink("新增交易", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>日期</th>
            <th>類型</th>
            <th>產品</th>
            <th>客戶</th>
            <th>數量</th>
            <th>備註</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null)
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.TxDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.TxType</td>
                    <td>
                        @* 依你實際 Model 有哪些欄位來顯示 *@
                        @* 如果有 ProductCode / ProductName 可以這樣： *@
                        @* @item.ProductCode - @item.ProductName *@
                        @item.ProductId
                    </td>
                    <td>
                        @* 若有 CustomerName 就顯示名字，否則顯示 Id 或留白 *@
                        @if (item.CustomerId.HasValue)
                        {
                            @item.CustomerId
                        }
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.Remark</td>
                    <td>
                        @Html.ActionLink("明細", "Details", new { id = item.Id }) |
                        @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("刪除", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageIndex)
            {
                <li class="active">
                    <span>@i <span class="sr-only">(current)</span></span>
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(
                        i.ToString(),
                        "Index",
                        new { page = i }
                    )
                </li>
            }
        }
    </ul>
}
