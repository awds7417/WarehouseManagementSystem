@model WarehouseManagementSystem.Models.InventoryTransaction

@{
    ViewBag.Title = "刪除進出貨紀錄";
}

<h2>刪除進出貨紀錄</h2>

<h3>你確定要刪除這筆紀錄嗎？</h3>

<div>
    <dl class="dl-horizontal">
        <dt>日期時間</dt>
        <dd>@Model.TxDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt>類型</dt>
        <dd>@(Model.TxType == "IN" ? "入庫" : "出庫")</dd>

        <dt>產品</dt>
        <dd>@Model.ProductCode - @Model.ProductName</dd>

        <dt>客戶</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.CustomerCode))
            {
                @:@Model.CustomerCode - @Model.CustomerName
            }
        </dd>

        <dt>數量</dt>
        <dd>@Model.Quantity</dd>

        <dt>備註</dt>
        <dd>@Model.Remark</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "InventoryTransactions", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <p>
        <input type="submit" value="確定刪除" class="btn btn-danger" />
        @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
    </p>
}

